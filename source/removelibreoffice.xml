 <?xml version="1.0" encoding="UTF-8"?>
 
 <packages>
  <package
    id="removelibreoffice"
    revision="2017120901"
    reboot="false"
    priority="15"
    execute="once">
 
 	<!--Variables pour les anciennes versions de LibreOffice 3-->
 	<variable name="version3413" value="3.4.1.3" />
 	<variable name="version3401" value="3.4.0.1" />
 	<variable name="version3331" value="3.3.3.1" />
 	<variable name="version3322" value="3.3.2.2" />
 	<variable name="version3312" value="3.3.1.2" />
 	<variable name="version3304" value="3.3.0.4" />
 
 	<!--3.4.1.3 -->
 	<install cmd="msiexec /qn /x {}">
 	  <exit code='any' />
 	  <condition>
 	    <check type="uninstall" condition="exists" path=""/>
 	  </condition>
 	</install>
  </package> 
 </packages>
